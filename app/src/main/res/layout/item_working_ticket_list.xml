<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_12">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_part_pic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:background="@color/windowBackground"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_part_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_part_pic"
            android:text="零件号："
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toStartOf="@+id/tv_part_status"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_part_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_alignParentRight="true"
            android:text="状态"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/ll_part_attribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_part_no"
            android:layout_below="@+id/tv_part_no"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_work_order_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="工作令号：1452646J"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="产品名称：李元新颂德歌功"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_component"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="部件：125365236"
                android:textColor="@color/textColor1"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_part_no"
            android:layout_below="@+id/ll_part_attribute"
            android:layout_marginRight="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:layout_toStartOf="@+id/tv_publisher"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1970-01-01 14:52:36"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_part_attribute"
            android:layout_marginTop="@dimen/space_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="发布人：李东旭"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_12" />

    </RelativeLayout>

    <View
        android:id="@+id/view_dividing_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray"/>

</LinearLayout>