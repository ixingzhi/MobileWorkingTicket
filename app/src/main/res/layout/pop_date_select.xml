<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_date_today"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_12"
        android:paddingRight="@dimen/space_12">

        <TextView
            android:id="@+id/tv_date_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="今天"
            android:textColor="@drawable/txt_date_select_state" />

        <ImageView
            android:id="@+id/iv_date_today"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_date_select_state" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/space_12"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/rl_date_week"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_12"
        android:paddingRight="@dimen/space_12">

        <TextView
            android:id="@+id/tv_date_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="最近一周"
            android:textColor="@drawable/txt_date_select_state" />

        <ImageView
            android:id="@+id/iv_date_week"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_date_select_state" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/space_12"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/rl_date_month"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_12"
        android:paddingRight="@dimen/space_12">

        <TextView
            android:id="@+id/tv_date_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="最近一个月"
            android:textColor="@drawable/txt_date_select_state" />

        <ImageView
            android:id="@+id/iv_date_month"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_date_select_state" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_select_start_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8">

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="开始时间" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/space_8"
                android:src="@drawable/ic_arrows_right_gray" />


        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/ll_select_end_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8">

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="结束时间" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="@dimen/space_8"
                android:src="@drawable/ic_arrows_right_gray" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray" />


        <LinearLayout
            android:id="@+id/ll_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/bg_click_color"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/view_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000" />

</LinearLayout>