<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_12">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_avatar_default" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_avatar"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginTop="@dimen/space_4"
            android:layout_toEndOf="@+id/iv_avatar"
            android:text="用户名"
            android:textColor="@color/textColor2" />

        <TextView
            android:id="@+id/tv_department_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_avatar"
            android:layout_alignLeft="@+id/tv_user_name"
            android:layout_marginBottom="@dimen/space_4"
            android:text="部门"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/textColor1" />

        <TextView
            android:id="@+id/tv_work_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_toEndOf="@+id/tv_user_name"
            android:text="职务"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/iv_make_phone_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/space_4"
            android:src="@drawable/ic_make_phone_call"/>


    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="80dp"
        android:background="@color/gray"/>

</LinearLayout>