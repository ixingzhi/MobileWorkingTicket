<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/space_12"
    android:paddingRight="@dimen/space_12">

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp">

        <View
            android:id="@+id/view_down"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/view_status"/>

        <View
            android:id="@+id/view_up"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/view_status"/>

        <View
            android:id="@+id/view_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_workflow_selected"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_8"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="***创建了工票" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-03-23 15:58" />

</LinearLayout>